<div class="movies-header">
    <h2>Ironhack Cinema</h2>
    <p>Click on the movie to check the showtimes!</p>
    <br>
</div>

<div class="movies">
    {{#each movies}}
    <div class="movie">
        <img src="{{this.image}}" alt="{{this.title}}" />
        <h3>{{this.title}}</h3>
        <a href="/movie/{{this._id}}">See more</a>
    </div>

    {{/each}}
</div>